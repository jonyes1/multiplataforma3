<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
     WindowStartupLocation="CenterScreen"
    SizeToContent="WidthAndHeight"
    Title="Gestor de bateria - 0%" Height="150" Width="400">
    <StackPanel Orientation="Horizontal" Margin="5">
        <Button x:Name="btnDescarregar" Content="-" Width="60" Height="60" FontSize="40" Click="btnDescarregar_Click"/>
        <Separator Width="5" Visibility="Hidden"/>
        <ProgressBar x:Name="pbBateria" Width="150" Height="50" Background="PaleGoldenrod"/>
        <Separator Width="5" Visibility="Hidden"/>
        <Button x:Name="btnCarregar" Content="+" Width="60" Height="60" FontSize="40" Click="btnCarregar_Click"/>
    </StackPanel>
   
</Window>
